# Proxy to allow ssh foo.internal to jump through gateway.host
# Host gateway
#      HostName gateway.host
# Host *.internal
#      Proxycommand ssh -q gateway nc -q0 %h 22

# Port Forward Examples
# RemoteForward remote-port localhost:local-port
# LocalForward local-port remote:port

Host nocturnal
     HostName nocturnal.uk.to

Host *
     ForwardAgent yes
     Compression yes
     ForwardX11 yes
     User clgc
     # share a single ssh connection
     ControlPath ~/.ssh/control/%r@%h:%p
     ControlMaster auto
     ControlPersist 60
     ServerAliveCountMax 4
     ServerAliveInterval 15
