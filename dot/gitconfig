[commit]
#  gpgsign = true
[include]
  path = ~/.gitconfig.private
[log]
  abbrevCommit = true
  follow = true
[merge]
  conflictstyle = diff3
[user]
  name = Charles Comstock
  email = dgtized@gmail.com
[push]
  default = simple
[pull]
  rebase = true
[tag]
  sort = version:refname
[init]
	defaultBranch = main
